{
  "name": "reactorumg",
  "private": false,
  "version": "1.0.4",
  "type": "commonjs",
  "main": "index.js",
  "keywords": [
    "react",
    "react-umg",
    "unreal engine"
  ],
  "author": "Caleb196x",
  "license": "MIT",
  "description": "ReactorUMG is a helper plugin for Unreal Engine that lets you build UMG game UI and editor UI using React.",
  "scripts": {
    "build": "tsc",
    "publish": "npm version patch && npm publish --access public",
    "lint": "eslint .",
    "test": "c8 --reporter=none --include \"**/*.ts\" tsx ./node_modules/mocha/bin/mocha --exit --require test/setup.ts --extension ts \"test/**/*.test.ts\"",
    "posttest": "c8 report --reporter=text --reporter=lcov --reporter=html --report-dir coverage"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-reconciler": "^0.28.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^7.0.1",
    "@types/node": "^20.11.18",
    "@types/react": "^18.0.0",
    "@types/react-reconciler": "^0.28.0",
    "c8": "^10.1.3",
    "chai": "^6.2.1",
    "mocha": "^10.7.3",
    "tsx": "^4.15.7"
  }
}
